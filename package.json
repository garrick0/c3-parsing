{
  "name": "@garrick0/c3-parsing",
  "version": "2.0.0-dev.0",
  "description": "Multi-source code analysis with unified property graph - TypeScript, Filesystem, and extensible architecture for Git, Testing, and more!",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist coverage .c3-cache",
    "version:dev": "npm version prerelease --preid=dev.$(git rev-parse --short HEAD) --no-git-tag-version",
    "version:canary": "npm version prerelease --preid=canary --no-git-tag-version",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepare": "npm run build"
  },
  "keywords": [
    "typescript",
    "javascript",
    "parser",
    "ast",
    "code-analysis",
    "property-graph",
    "static-analysis",
    "c3",
    "code-graph"
  ],
  "author": "C3 Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/garrick0/c3-parsing"
  },
  "bugs": {
    "url": "https://github.com/garrick0/c3-platform/issues"
  },
  "homepage": "https://github.com/garrick0/c3-platform#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.4",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@types/glob": "^8.1.0",
    "@typescript-eslint/types": "^8.46.4",
    "@typescript-eslint/typescript-estree": "^8.46.4",
    "@typescript-eslint/visitor-keys": "^8.46.4",
    "@garrick0/c3-shared": "dev",
    "glob": "^11.0.3",
    "lru-cache": "^11.2.2",
    "minimatch": "^10.1.1"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
